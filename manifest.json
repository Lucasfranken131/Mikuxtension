{
    "name": "Hatsune Miku VA",
    "version": "1.0.0",
    "description": "Your virtual assistance, Miku",
    "manifest_version": 3,
    "author": "Lucas Franco",
    "content_scripts": [
        {
          "matches": ["http://*/*", "https://*/*"],
          "js": ["mikuPage.js", "index.js", "popUp.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["imgs/miku_character/miku_walking_right.gif", "imgs/miku_character/miku_walking_left.gif", "sounds/mikudayo.mp3"],
          "matches": ["<all_urls>"]
        }
    ],    
    "permissions": [
        "tabs",
        "activeTab",
        "scripting"
    ],
    "action":{
        "default_popup": "index.html",
        "default_title": "Hatsune Miku"
    }
}